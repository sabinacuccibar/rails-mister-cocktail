
<div class="navbar">

  <h2><%= link_to '', cocktails_path(@cocktails), class: 'fas fa-arrow-left' %></h2>
     <h1>Thirsty<span style="color: $body-color:">app<%= image_tag "drink.png", alt: "logo", width: 50 %></span></h1>
  </div>


<div class="cocktail-show" style="background-color: #ffffe5">
   <h1><%= image_tag "drink.png", alt: "logo", width: 50 %> <%= @cocktail.name %></h1>
    <h4><%= link_to 'Add new dose', new_cocktail_dose_path(@cocktail) %></h4
        <div class="col-sm-12 col-md-6">
          <table class="table">
            <tbody>
              <thead>
                <th>Ingredient</th>
                <th>Description</th>
                <th>Action</th>
              </thead>
              <% @cocktail.doses.each do |dose| %>
                <tr>
                  <td><%= dose.ingredient.name %></td>
                  <td><%= dose.description %></td>
                  <td>
                    <%= link_to dose_path(dose), method: :delete, data: { confirm: "Delete #{dose.ingredient.name}?" } do %>
                      <i class="fa fa-trash destroy_dose"></i>
                    <% end %>
                  </td>
                </tr>
              <% end %>
            </tbody>
          </table>
        </div>
      </div>
 </div>
</div>
